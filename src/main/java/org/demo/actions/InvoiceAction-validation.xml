<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 2.5//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <validator type="requiredstring">
        <param name="fieldname">invoiceBean.subject</param>
        <message>El concepto es requerido</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">invoiceBean.dateFrom</param>
        <message>La fecha es requerida</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">invoiceBean.dateTo</param>
        <message>La fecha es requerida</message>
    </validator>
    <validator type="double">
        <param name="fieldname">invoiceBean.bruto</param>
        <message>La cantidad es requerida</message>
    </validator>
</validators>